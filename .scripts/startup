#!/bin/bash

option=$1

nitrogen --restore
# ~/.scripts/mousewatch &
blueman-applet & > /dev/null
discord --start-minimized & > /dev/null
bspc monitor eDP-1 -d X
mail &

if [[ $option == 1 ]]
then
    bspc monitor DP-3 -d I II III IV V VI VII VIII
    bspc monitor DP-1 -d IX
    bspc monitor DP-3 -f
    bspc config -m DP-3 bottom_padding 30
    ~/.scripts/pulseaudio-watcher | xob -s monitor2 &
elif [[ $option == 2 ]]
then
    bspc monitor DP-3 -f
    bspc monitor DP-3 -d I II III IV V VI VII VIII IX
    bspc config -m DP-3 bottom_padding 30
    ~/.scripts/pulseaudio-watcher | xob -s monitor1 &
elif [[ $option == 3 ]]
then
    bspc monitor DP-1 -f
    bspc monitor DP-1 -d I II III IV V VI VII VIII IX
    bspc config -m DP-1 bottom_padding 30
    ~/.scripts/pulseaudio-watcher | xob -s monitor1 &
elif [[ $option == 4 ]]
then
    bspc monitor eDP-1 -d I II III IV V VI VII VIII IX X
    bspc config -m eDP-1 bottom_padding 30
    ~/.scripts/pulseaudio-watcher | xob -s computer &
fi

~/.scripts/polybarstart $1 & > /dev/null
xset s off -dpms
#xautolock -time 2 -corners ---- -locker 'sudo slock' &
#xidlehook --not-when-fullscreen --not-when-audio --timer 30 'sudo slock' '' &
