#
# wm independent hotkeys
#

# screenshot
Print
    scrot 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Pictures/screenshots && mv $f ~/Pictures/screenshots && xclip -selection clipboard -t image/png -i ~/Pictures/screenshots/`ls -1 -t ~/Pictures/screenshots | head -1`'

# selected screenshot
shift + Print
    scrot -s 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Pictures/screenshots && mv $f ~/Pictures/screenshots && xclip -selection clipboard -t image/png -i ~/Pictures/screenshots/`ls -1 -t ~/Pictures/screenshots | head -1`'

# terminal emulator
super + Return
	alacritty

# lock the screen
super + shift + Escape
    sudo /usr/local/bin/slock

# program launcher
super + d
    rofi -show run

# window selector
super + w
    rofi -show window

# calculator
super + c
    rofi -show calc -modi calc -window-title calc -no-history -no-show-match -no-sort

# ranger
super + r
    alacritty -t Ranger --class Ranger -e ranger &
super + F
    alacritty -t Ranger --class Ranger -e ranger &

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# control mouse via keyboard
super + alt + {h, l}
    xdotool mousemove_relative -- {-10, 10} 0 
super + alt + {j, k}
    xdotool mousemove_relative -- 0 {10, -10}
super + alt + space
    xdotool click 1
super + alt + shift + space
    xdotool click 2

# volume controls
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

#
# bspwm hotkeys
#

# open powermenu
super + p
    ~/.config/rofi/applets/menu/powermenu.sh

# quit/restart bspwm
super + shift + {q,r}
    bspc {quit,wm -r}

# close
super + q
    bspc node -c

# send the newest marked node to the newest preselected node
#super + y
#    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
#super + g
#    bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + f
    bspc node -t tiled || bspc node -t fullscreen

# Toggle floating
super + space
    bspc node -t tiled || bspc node -t floating

# Toggle horizontal/vertical
super + e
    bspc node @parent -R 90

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {h,j,k,l}
    dir={west,south,north,east}; bspc node "$dir" -f || bspc monitor "$dir" -f

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# preselect
#

# preselect the direction
super + ctrl + shift + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
# super + ctrl + {1-9}
    # bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + shift + space
    bspc node -p cancel
super + ctrl + shift + Escape
    bspc node -p cancel

super + Tab
    bspc wm -h off; \
        bspc node older -f; \
        bspc wm -h on

super + shift + Tab
    bspc wm -h off; \
	bspc node newer -f; \
	bspc wm -h on

#
# move/resize
#

# move nodes
super + shift + {h,j,k,l}
    ~/.config/sxhkd/move {west,south,north,east}

# Resize Nodes
super + ctrl + {h,j,k,l}
    ~/.config/sxhkd/resize {west,south,north,east} 40
