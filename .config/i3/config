# open pulse audio mixer
bindsym $mod+a exec --no-startup-id alacritty -e 'pacmixer'

# switch sound device/sink
bindsym $mod+Right exec --no-startup-id pulseaudio-control next-sink

# open file explorer
#bindsym $mod + Shift + F exec --no-startup-id nautilus

# simulate mouse movement
bindsym $mod+Ctrl+k exec --no-startup-id xdotool mousemove_relative -- 0 -15
bindsym $mod+Ctrl+j exec --no-startup-id xdotool mousemove_relative -- 0 15
bindsym $mod+Ctrl+h exec --no-startup-id xdotool mousemove_relative -- -15 0
bindsym $mod+Ctrl+l exec --no-startup-id xdotool mousemove_relative -- 15 0
bindsym $mod+Ctrl+space exec --no-startup-id xdotool click 1

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

